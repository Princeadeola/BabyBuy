<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:id="@+id/leftItemsID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bed"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemNameID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/itemShortDescriptionID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baby Mosquito net + sleeping pad"
                    />

                <TextView
                    android:id="@+id/itemPriceID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â£50"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rightItemsID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/leftItemsID"
            android:layout_marginEnd="10dp"
            >

            <CheckBox
                android:id="@+id/itemCheckBoxID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                />

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_below="@id/itemCheckBoxID"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/location_icon"
                android:layout_marginEnd="10dp"
                />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>